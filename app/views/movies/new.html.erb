
<div class="add-movie">
  <h2>Add Movies</h2>
  <br>
  <div>
	<div>
		<%= form_for(@movie) do |f| %>
		<%= render 'shared/movie_error_messages' %>

		  <%= f.text_field :title %>
		  <%= f.text_field :showtime %>
		  <%= f.submit "Add Movie", class:"btn btn-primary" %>
		  <% end %>
	</div>
  </div>
</div>