<br>
<div class="container">
      <div>
        <h2>Buy Ticket</h2>
        <br>
        <!-- order form  -->
        <%= form_for(@order) do |f| %>
        <ul id="order-form">
         <%= render 'shared/error_messages' %>
        
         <%= f.label :first_name %> 
         <%= f.text_field :first_name, :placeholder => "First name" %>
         <%= f.label :last_name %>
         <%= f.text_field :last_name, :placeholder => "Last name" %>
          <%= f.label :email %>
          <%= f.text_field :email, :placeholder => "Email" %>
          <%= f.label :credit_card %>
          <%= f.text_field :credit_card, :placeholder => "Credit card number" %>
          <%= f.label :expiration %>
          <%= f.text_field :expiration, :placeholder => "expiration date" %>
         <br>
          <%= f.submit "Checkout", :class => "btn btn-primary" %> 
        </ul>
        <% end %> 
        <br>
        <button class="btn btn-danger"><%= link_to "Order History", orders_path %></button>
      </div>
</div>